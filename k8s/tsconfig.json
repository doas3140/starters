{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "strict": true,
        "outDir": "bin",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.mjs"
    ]
}
